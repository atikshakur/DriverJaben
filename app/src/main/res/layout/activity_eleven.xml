<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ElevenActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_layout"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginTop="15dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#FF150C">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:padding="12dp"
                android:text="You must upload this documents for verification. You will not be able to take rides until verification is complete."
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:drawableRight="@drawable/cancel_doc"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/layout_nid"
        android:layout_below="@id/cardview_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NID/Passport*"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Missing"
                android:textColor="#FF150C"
                android:textSize="18sp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/missing"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="150dp"/>

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_below="@id/layout_nid"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C5C7CB"/>

    <LinearLayout
        android:id="@+id/layout_driving"
        android:layout_below="@id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driving Licence*"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Missing"
                android:textColor="#FF150C"
                android:textSize="18sp"
                android:layout_marginTop="7dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/missing"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="140dp"/>

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_below="@id/layout_driving"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C5C7CB"/>

    <LinearLayout
        android:id="@+id/layout_car"
        android:layout_below="@id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Registration Number*"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Missing"
                android:textColor="#FF150C"
                android:textSize="18sp"
                android:layout_marginTop="7dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/missing"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="65dp"/>

    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_below="@id/layout_car"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C5C7CB"/>

    <LinearLayout
        android:id="@+id/layout_fitness"
        android:layout_below="@id/view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fitness Certificate*"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Missing"
                android:textColor="#FF150C"
                android:textSize="18sp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/missing"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="115dp"/>

    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_below="@id/layout_fitness"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C5C7CB"/>

    <LinearLayout
        android:id="@+id/layout_tax"
        android:layout_below="@id/view4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tax Token*"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Missing"
                android:textColor="#FF150C"
                android:textSize="18sp"
                android:layout_marginTop="7dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/missing"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="180dp"/>

    </LinearLayout>

    <View
        android:id="@+id/view5"
        android:layout_below="@id/layout_tax"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C5C7CB"/>

    <LinearLayout
        android:id="@+id/layout_insurance"
        android:layout_below="@id/view5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NID/Passport*"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Missing"
                android:textColor="#FF150C"
                android:textSize="18sp"
                android:layout_marginTop="7dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/missing"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="150dp"/>

    </LinearLayout>

    <View
        android:id="@+id/view6"
        android:layout_below="@id/layout_insurance"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C5C7CB"/>

    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_below="@id/view6"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_Done"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Done"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:padding="2dp"
            android:background="@drawable/button_round_red"/>


    </LinearLayout>


</RelativeLayout>

</ScrollView>